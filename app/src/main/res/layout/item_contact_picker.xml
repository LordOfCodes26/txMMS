<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/tx_setting_cardview_padding_horizontal"
    android:paddingVertical="@dimen/tx_setting_cardview_textview_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/tx_setting_cardview_textview_padding">

        <View
            android:id="@+id/v_avatar_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_background"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_contact_initial"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_contact_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:civ_border_width="0dp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tx_content_text_color"
            android:textSize="@dimen/tx_normal_text_size"
            android:singleLine="true"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/tx_sub_text_color"
            android:textSize="@dimen/tx_small_text_size"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone" />
    </LinearLayout>

    <com.android.common.view.MCheckBox
        android:id="@+id/cb_contact_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
