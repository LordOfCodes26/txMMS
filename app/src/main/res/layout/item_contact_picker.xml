<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_contact_picker_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_row_height"
    android:paddingStart="@dimen/larger_margin"
    android:paddingEnd="@dimen/activity_margin"
    android:paddingTop="@dimen/medium_margin"
    android:paddingBottom="@dimen/medium_margin"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/item_contact_picker_image"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:padding="@dimen/tiny_margin"
        android:src="@drawable/ic_person_vector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_contact_picker_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textDirection="locale"
        android:textSize="@dimen/big_text_size"
        app:layout_constraintEnd_toStartOf="@+id/item_contact_picker_checkbox"
        app:layout_constraintStart_toEndOf="@+id/item_contact_picker_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/item_contact_picker_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium_margin"
        android:alpha="0.6"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_contact_picker_checkbox"
        app:layout_constraintStart_toEndOf="@+id/item_contact_picker_image"
        app:layout_constraintTop_toBottomOf="@+id/item_contact_picker_name"
        tools:text="0123 456 789" />

    <CheckBox
        android:id="@+id/item_contact_picker_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
