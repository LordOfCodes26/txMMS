<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:background="@color/tx_main_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ContactPickerActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <com.goodwy.commons.views.BounceScrollView
            android:id="@+id/nest_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <eightbitlab.com.blurview.BlurTarget
                android:id="@+id/blurTarget"
                android:background="@color/tx_main_background_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/tx_setting_cardview_margin_horizontal"
                    android:paddingTop="@dimen/tx_setting_cardview_item_margin_vertical"
                    android:paddingBottom="150px">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/tx_setting_cardview_margin_vertical"
                        app:cardBackgroundColor="@color/tx_cardview_bg_color"
                        app:cardCornerRadius="@dimen/tx_item_radius"
                        app:cardElevation="0dp">
                        <LinearLayout
                            android:paddingVertical="@dimen/tx_setting_cardview_item_margin_vertical"
                            android:layout_marginVertical="@dimen/tx_setting_cardview_padding_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/contactRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:overScrollMode="never"
                                android:nestedScrollingEnabled="false" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </eightbitlab.com.blurview.BlurTarget>
        </com.goodwy.commons.views.BounceScrollView>

        <com.goodwy.commons.views.BlurAppBarLayout
            android:id="@+id/blur_app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/blur_app_bar_height"
            android:paddingBottom="5dp"
            app:appBarBackground="@drawable/bg_cmn_appbar_up" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <View
        android:layout_alignParentBottom="true"
        android:id="@+id/bottomMask"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_gravity="bottom"
        android:visibility="visible"
        android:background="@drawable/bg_cmn_appbar_down" />

    <FrameLayout
        android:id="@+id/lyt_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.android.common.view.MRippleToolBar
            android:id="@+id/confirm_tab"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:visibility="visible" />
    </FrameLayout>
</RelativeLayout>
