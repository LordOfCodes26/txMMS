<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chips_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        app:chipSpacingHorizontal="@dimen/small_margin"
        app:chipSpacingVertical="@dimen/small_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin"
        android:layout_marginBottom="@dimen/small_margin">

        <com.goodwy.commons.views.MyEditText
            android:id="@+id/chips_edit_text"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_toStartOf="@+id/chips_confirm_button"
            android:background="@drawable/search_bg"
            android:gravity="center_vertical"
            android:hint=""
            android:inputType="textCapWords|phone"
            android:paddingStart="@dimen/normal_margin"
            android:paddingEnd="32dp"
            android:textSize="@dimen/bigger_text_size"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/chips_speech_to_text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chips_edit_text"
            android:layout_alignBottom="@+id/chips_edit_text"
            android:layout_alignEnd="@+id/chips_edit_text"
            android:layout_marginEnd="@dimen/medium_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:alpha="0.4"
            android:contentDescription="@string/delete"
            android:src="@drawable/ic_microphone_vector"
            android:visibility="gone"
            tools:visibility="visible"
            tools:tint="@color/dark_grey" />

        <ImageView
            android:id="@+id/chips_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chips_edit_text"
            android:layout_alignBottom="@+id/chips_edit_text"
            android:layout_alignEnd="@+id/chips_edit_text"
            android:layout_marginEnd="@dimen/medium_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:alpha="0.4"
            android:contentDescription="@string/delete"
            android:src="@drawable/ic_clear_round"
            android:visibility="gone"
            tools:tint="@color/dark_grey" />

        <ImageView
            android:id="@+id/chips_confirm_button"
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:layout_alignTop="@+id/chips_edit_text"
            android:layout_alignBottom="@+id/chips_edit_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/medium_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/add_number"
            android:padding="@dimen/smaller_margin"
            android:src="@drawable/ic_check_vector"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

</LinearLayout>

