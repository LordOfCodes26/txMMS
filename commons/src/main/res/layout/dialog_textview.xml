<?xml version="1.0" encoding="utf-8"?>
<eightbitlab.com.blurview.BlurView
    android:id="@+id/blurView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.goodwy.commons.views.MyTextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                style="@style/DialogTitleStyle"
                android:visibility="gone" />
        </RelativeLayout>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/bigger_margin"
            android:paddingTop="@dimen/activity_margin"
            android:paddingEnd="@dimen/bigger_margin"
            android:paddingBottom="@dimen/activity_margin"
            android:textColorHighlight="@color/disabled_text_color_highlight"
            android:textSize="@dimen/bigger_text_size" />

        <LinearLayout
            android:id="@+id/buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DialogButtonContainerStyle"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/negative_button"
                style="@style/Widget.Material3.Button.TextButton.Dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/positive_button"
                style="@style/Widget.Material3.Button.TextButton.Dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_margin"
                android:text="@string/ok"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</eightbitlab.com.blurview.BlurView>
